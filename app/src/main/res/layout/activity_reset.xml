<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reset">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/logottu"
        app:layout_constraintBottom_toTopOf="@+id/editTextEmailreset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEmailreset"
        android:layout_width="293dp"
        android:layout_height="43dp"
        android:drawablePadding="5dp"
        android:fontFamily="monospace"
        android:drawableLeft="@drawable/ic_username_black_24dp"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/btnrounwhite"
        android:hint=" Enter Reset Email"
        android:inputType="textEmailAddress"
        android:textColorLink="#00E4DCDC"
        app:layout_constraintBottom_toTopOf="@+id/buttonReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="216dp"
        android:layout_height="49dp"
        android:background="@drawable/btnround"
        android:text="SEND RESET LINK"
        app:layout_constraintBottom_toTopOf="@+id/textViewToLog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailreset" />

    <TextView
        android:id="@+id/textViewToLog"
        android:layout_width="124dp"
        android:layout_height="23dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Login Here"
        android:textColor="#0A25B6"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReset"/>

</androidx.constraintlayout.widget.ConstraintLayout>